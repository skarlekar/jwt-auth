#inner-card3(class='card')
  #inner-card3-header(class='card-header')
    h4#addUserCard(class='card-title text-center') Add New User
  #inner-card3-body(class='card-body')
    #addUser(class='container')
      fieldset
        #div-username(class='form-group')
          label(for='inputUserName') Username:
          input#inputUserName(type='text', placeholder='Username', class='form-control form-control-sm')
        #div-password(class='form-group')
          label(for='inputPassword') Password:
          input#inputPassword(type='password', placeholder='Password', class='form-control form-control-sm')
        #div-verify-password(class='form-group')
          label(for='inputVerifyPassword') Verify Password:
          input#inputVerifyPassword(type='password', placeholder='Verify Password', class='form-control form-control-sm')
        #div-first-name(class='form-group')
          label(for='inputUserFirstname') First Name:
          input#inputUserFirstname(type='text', placeholder='First Name', class='form-control form-control-sm')
        #div-last-name(class='form-group')
          label(for='inputUserLastname') Last Name:
          input#inputUserLastname(type='text', placeholder='Last Name', class='form-control form-control-sm')
        #div-email(class='form-group')
          label(for='inputUserEmail') Email
          input#inputUserEmail(type='text', placeholder='Email', class='form-control form-control-sm')
          small(class='form-text text-muted') Your email will not be shared with anyone
        #div-org(class='form-group')
          label(for='inputUserOrganization') Organization
          input#inputUserOrganization(type='text', placeholder='Organization', class='form-control form-control-sm')
        #div-admin(class='form-check')
          label(for='adminUser', class='form-check-label')  
            input#adminUser(type='checkbox',checked=false, disabled=false, class='form-check-input') 
            span Admin User
        #div-admin(class='form-check')
          label(for='enableMFA', class='form-check-label')  
            input#enableMFA(type='checkbox',checked=false, disabled=false, class='form-check-input') 
            span Enable MFA
        #div-authorized-apps(class='form-group')
          label(for='authorizedApps') Authorized Applications: 
          select#authorizedApps(multiple=true, class='form-control')
            each app, i in apps
              option(value=app) #{app)
        br
        #div-button(class='text-md-center')
          button#btnAddUser(class='btn btn-primary') Add User
        br
